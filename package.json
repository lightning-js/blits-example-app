{
  "name": "@lightningjs/blits-example-app",
  "version": "0.13.0",
  "description": "Lightning 3 Blits Example App",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "start:test": "npm run setEnv &  npm run dev",
    "lint": "eslint '**/*.js'",
    "lint:fix": "eslint '**/*.js' --fix",
    "build": "vite build",
    "dev": "vite dev --host",
    "test": "NODE_ENV=testing backstop --config=backstop.cjs test",
    "test:reference": "NODE_ENV=testing backstop --config=backstop.cjs reference",
    "test:cypress": "npm run setEnv & npx cypress run & npx cypress-image-diff-html-report start --autoOpen true",
    "test:cypress-headed": "npm run setEnv & npx cypress run --headed & npx cypress-image-diff-html-report start --autoOpen true",
    "setEnv" : "node ./scripts/env.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "Michiel van der Geest <hello@michielvandergeest.com>",
  "license": "Apache-2",
  "devDependencies": {
    "backstopjs": "^6.3.22",
    "cypress": "^13.8.1",
    "cypress-image-diff-html-report": "^2.1.2",
    "cypress-image-diff-js": "^2.1.4",

    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "playwright": "^1.41.0",
    "prettier": "^2.5.1",
    "shaka-player": "^4.7.1",
    "vite": "^4.0.4"
  },
  "dependencies": {
    "@lightningjs/blits": "^0.10.0"
  }
}
